import java.util.Random;

public class Tärning {
	
	private int värde;
	
	public Tärning() {
		Random ran = new Random();
		this.värde = ran.nextInt(6) +1;
	}
	
	public Tärning(int seed) {
		Random ran = new Random(seed);
		this.värde = ran.nextInt(6) +1;
	}
	
	public int getValue() {
		return värde;
	}
	
	public void roll() {
		Random ran = new Random();
		värde = ran.nextInt(6) +1;
	}
	
	public void seedRoll(int seed) {
		Random ran = new Random();
		värde = ran.nextInt(6) +1;
	}
}
